---
import remembrance from '@data/remembrance.json';
---

<div class="grid grid-cols-1 lg:grid-cols-2 grid-flow-row-dense gap-2 not-prose">
  {
    remembrance.map((friend) => (
      <>
        <a
          href={friend.url}
          class="hover:underline rounded-md transition-all no-underline hover:shadow-md outline-neutral-200 dark:outline-neutral-600 outline outline-1"
        >
          <div class="p-2 flex items-start">
            {friend.avatar && (
              <img
                height="75"
                width="75"
                src={friend.avatar}
                alt={friend.title}
                class="object-contain"
              />
            )}
            <div class="ml-2">
              <p class="line-through">{friend.title}</p>
              <p class="line-through">{friend.description || ''}</p>
            </div>
          </div>
        </a>
        <p class="text-sm p-2">{friend.reason}</p>
      </>
    ))
  }
</div>
